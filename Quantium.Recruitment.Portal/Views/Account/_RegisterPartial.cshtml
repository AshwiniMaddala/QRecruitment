@model Quantium.Recruitment.Portal.Models.AccountViewModels.RegisterViewModel

    <form name="registerForm" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
        <div layout="row" flex-gt-sm="50" class="justify-self-center">
            <div layout="column" class="fill-width">
                <md-input-container>
                    <label>Email</label>
                    <input asp-for="Email" type="text" class="form-control" id="email2" required name="email">
                    <div ng-messages="registerForm.email.$error">
                        <div ng-message="required">Email is required.</div>
                    </div>
                </md-input-container>

                <md-input-container>
                    <label>Password</label>
                    <input asp-for="Password" type="password" class="form-control" id="password2" required name="password">
                    <div ng-messages="registerForm.password.$error">
                        <div ng-message="required">Password is required.</div>
                    </div>
                </md-input-container>

                <md-input-container>
                    <label>Confirm Password</label>
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="password2" required name="confirmPassword">
                    <div ng-messages="registerForm.confirmPassword.$error">
                        <div ng-message="required">Confirm Password is required.</div>
                    </div>
                </md-input-container>

                <md-button class="md-primary md-raised createJobButton" type="submit" ng-click="registerForm.$valid">
                    Register

                </md-button>
            </div>
        </div>
    </form>


